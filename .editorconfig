root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
tab_width = 4

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.py,*.pyw}]
max_line_length = 120

[{*.css, *.js}]
indent_size = 2

[*.yml]
indent_size = 2

[Makefile]
indent_style = tab
